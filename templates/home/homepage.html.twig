{% extends 'base.html.twig' %}

{% block title %}Hello HomeController!{% endblock %}

{% block body %}
    <div class="container">
        <h1 class="my-4 text-center shadow p-2 text-info">Bienvenue dans le monde des Héros !!</h1>
    </div>
    <div class="container">
        <h1>Nos produits phares :</h1>
        <div class="row">
            {% for i in 1..3 %}
                <div class="col">
                    <div class="card">
                        <img src="https://picsum.photos/200/200" alt="img">
                        <div class="card-body">
                            <h4>San Goku</h4>
                            <p class="card-text">
                            Lorem ipsum dolor sit amet consectetur adipisicing.
                            </p>
                            <a href="#" class="btn btn-info">Détail</a>
                            <a href="#" class="btn btn-success">Acheter</a>
                        </div>
                    </div>
                </div>
            {% endfor %}
        </div>
        <hr class="mt-5 mx-auto w-50">
        <h2 class="mt-5">Des figurines de qualités</h2>

        <div class="row mt-4">
            {% include "shared/_info.shop.html.twig" with {
                    'color':'info',
                    'icone':'fas fa-truck-fast',
                    'text':'livraison rapide'
                } 
            %}

            {% include "shared/_info.shop.html.twig" with {
                    'color':'success',
                    'icone':'fas fa-check',
                    'text':'livraison rapide'
                } 
            %}

            {% include "shared/_info.shop.html.twig" with {
                    'color':'warning',
                    'icone':'fas fa-reply',
                    'text':'Retour gratuit'
                } 
            %}
        </div>
    </div>
    
{% endblock %}