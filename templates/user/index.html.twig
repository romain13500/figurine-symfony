{% extends 'base.html.twig' %}

{% block title %}Hello UserController!{% endblock %}

{% block body %}
<h1>Utilisateurs :</h1>
    <div class="container">
        <table class="table">
                <thead>
                <tr>
                    <th>Email</th>
                    <th>Role</th>
                    <th>Action</th>
                </tr>
            </thead>
            <tbody>
                {% for u in users %}
                    <tr>
                        <td>{{u.email}}</td>
                        <td>
                            {% for r in u.roles %}
                                {{r}}
                            {% endfor %}
                        </td>
                        <td>
                            <a href="" class="fa fa-gear"></a>
                            <a href="" class="fa fa-trash"></a>
                        </td>
                    </tr>
                {% endfor %}
            </tbody>
        </table>
    </div>

{% endblock %}
