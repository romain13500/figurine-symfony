{% extends 'base.html.twig' %}

{% block title %}Figurines{% endblock %}

{% block body %}
    <h1>Figurines</h1>
    <div class="container">
        <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ figurine.id }}</td>
            </tr>
            <tr>
                <th>Name</th>
                <td>{{ figurine.name }}</td>
            </tr>
            <tr>
                <th>Picture</th>
                <td>{{ figurine.picture }}</td>
            </tr>
            <tr>
                <th>Price</th>
                <td>{{ figurine.price }}</td>
            </tr>
            <tr>
                <th>Slug</th>
                <td>{{ figurine.slug }}</td>
            </tr>
            <tr>
                <th>ShortDescription</th>
                <td>{{ figurine.shortDescription }}</td>
            </tr>
        </tbody>
        </table>
    </div>
    
    <div class="d-flex">
        <a href="{{ path('figurines_edit', {'id': figurine.id}) }}">edit</a>
        <a href="#">{{ include('figurine/_delete_form.html.twig') }}</a>
    </div>
    
    <a href="{{ path('app_figurines') }}">back to list</a>
{% endblock %}
