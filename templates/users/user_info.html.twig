{% extends "base.html.twig" %}

{% block title %}
    
{% endblock %}


{% block body %}
     <div class="container">
        <div class="border border-warning mt-5 mb-5 p-5">
            <table class="table">
                <tbody>
                    <tr>
                        <th> Role</th>
                        <td>
                            {% for role in app.user.roles %}
                                {% if role == "ROLE_ADMIN" %}
                                    Administrateur
                                {% elseif role == "ROLE_USER" %}
                                    Utilisateur
                                {% endif %}
                                    
                            {% endfor %}
                        </td>
                    </tr>
                    <tr>
                        <th>Email</th>
                        <td>{{ app.user.email }}</td>
                    </tr>
                    <tr>
                        <th>Pseudo</th>
                        <td>{{ app.user.username }}</td>
                    </tr>
                    <tr>
                        <th>Password</th>
                        <td>******</td>
                    </tr>
                </tbody>
            </table>
            <div class="d-flex justify-content-around">
                <a href="{{ path('user_edit', { 'id': app.user.id}) }}" class="btn btn-info">Modifier</a>
                <a href="{{ path('user_delete', { 'id': app.user.id}) }}" class="btn btn-danger">Supprimer</a>
            </div>
        </div>
    </div>
{% endblock %}