{% extends 'base.html.twig' %}

{% block title %}Utilisateur{% endblock %}

{% block body %}
    <h1>Utilisateur {{ user.username}}</h1>
    <div class="container">
        <table class="table">
            <tbody>
                <tr>
                    <th>Id</th>
                    <td>{{ user.id }}</td>
                </tr>
                <tr>
                    <th>Email</th>
                    <td>{{ user.email }}</td>
                </tr>
                <tr>
                    <th>Roles</th>
                    <td>
                        {% for role in user.roles %}
                        
                            {% if role == "ROLE_ADMIN" %}
                                    Administrateur
                            {% elseif role == "ROLE_USER" %}
                                    Utilisateur
                            {% endif %}
                                    
                        {% endfor %}
                    </td>
                </tr>
                <tr>
                    <th>Password</th>
                    <td>{{ user.password }}</td>
                </tr>
            </tbody>
        </table>

        <a href="{{ path('app_user') }}">back to list</a><br>
        <a href="{{ path('user_edit', {'id': user.id}) }}">edit</a>

        {{ include('users/_delete_form.html.twig') }}
    </div>
{% endblock %}
