{% extends "base.html.twig" %}

{% block title %}
    Vos commandes
{% endblock %}

{% block body %}
    <h1>Vos commandes :</h1>
    <div class="container">
        <table class="table">
            <thead>
                <th>Numero</th>
                <th>Adresse</th>
                <th>Date de commande</th>
                <th>total</th>
            </thead>
            <tbody>
                {% for p in purchases %}
                    <tr>
                        <td>{{p.id}}</td>
                        <td>{{p.address}}</td>
                        <td>{{p.purchasedAt | date('d/m/Y H:i')}}</td> 
                        <td>{{p.total / 100}}</td>       
                    </tr> 
                {% endfor %}
                   
            </tbody>
        </table>
    </div>
{% endblock %}